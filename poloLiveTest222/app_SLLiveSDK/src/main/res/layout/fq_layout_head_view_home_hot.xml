<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="124dp">

        <com.slzhibo.library.ui.view.widget.RoundRelativeLayout
            android:id="@+id/rl_banner_view_bg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            app:rlClipBackground="true"
            app:rlRadius="@dimen/fq_live_item_round_corners">

            <ImageView
                android:id="@+id/iv_default_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.slzhibo.library.ui.view.widget.bgabanner.BGABanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:banner_indicatorGravity="center_horizontal"
                app:banner_pageChangeDuration="1500"
                app:banner_placeholderDrawable="@drawable/fq_shape_default_banner_cover_bg"
                app:banner_pointAutoPlayAble="true"
                app:banner_pointAutoPlayInterval="5000"
                app:banner_pointContainerBackground="@android:color/transparent"
                app:banner_pointDrawable="@drawable/fq_shape_banner_indicator_selector"
                app:banner_transitionEffect="flip" />
        </com.slzhibo.library.ui.view.widget.RoundRelativeLayout>
    </RelativeLayout>

    <com.slzhibo.library.ui.view.widget.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_10"
        app:rlClipBackground="true"
        app:rlRadius="@dimen/fq_live_item_round_corners">

        <com.slzhibo.library.ui.view.widget.bgabanner.BGABanner
            android:id="@+id/banner_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fq_shape_week_star_rank_bg"
            app:banner_indicatorGravity="center_horizontal"
            app:banner_pageChangeDuration="1500"
            app:banner_placeholderDrawable="@drawable/fq_shape_default_banner_cover_bg"
            app:banner_pointAutoPlayInterval="3000"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_pointDrawable="@drawable/fq_shape_banner_indicator_home_top_selector"
            app:banner_pointLeftRightMargin="2dp"
            app:banner_transitionEffect="flip" />
    </com.slzhibo.library.ui.view.widget.RoundRelativeLayout>
</LinearLayout>
