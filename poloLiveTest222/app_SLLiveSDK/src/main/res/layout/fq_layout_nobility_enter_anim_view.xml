<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_nobility_avatar_bg"
        android:layout_width="202dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:includeFontPadding="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxWidth="80dp"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="#ffd72611"
                android:textSize="14sp" />

            <com.slzhibo.library.ui.view.widget.drawabletext.DrawableTextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-40dp"
        android:layout_toRightOf="@+id/rl_nobility_avatar_bg">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/fq_ic_placeholder_avatar_white"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="87dp"
            android:layout_height="87dp" />
    </RelativeLayout>
</RelativeLayout>
