<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fq_shape_dialog_white_corner_bg"
    android:paddingLeft="25dp"
    android:paddingTop="16dp"
    android:paddingRight="25dp"
    android:paddingBottom="25dp">

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/fq_compose_fail_tips"
        android:textColor="@color/fq_text_black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tips"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="@string/fq_compose_tips"
        android:textColor="@color/fq_colorBlack29"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content_tips"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/fq_btn_compose_shape"
        android:gravity="center"
        android:minWidth="180dp"
        android:minHeight="40dp"
        android:padding="@dimen/dp_10"
        android:text="@string/fq_know"
        android:textColor="@color/fq_colorWhite"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content_tips"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/fq_btn_compose_cancel_shape"
            android:gravity="center"
            android:minHeight="34dp"
            android:text="@string/fq_btn_cancel"
            android:textColor="@color/fq_text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/fq_btn_compose_shape"
            android:gravity="center"
            android:minHeight="34dp"
            android:text="@string/fq_btn_sure_compose"
            android:textColor="@color/fq_colorWhite"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
