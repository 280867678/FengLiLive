<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_game_prize_bg"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/fq_shape_game_prize_content_bg">

        <TextView
            android:id="@+id/tv_game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fq_shape_game_prize_title_bg"
            android:paddingStart="5dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"
            android:textColor="@color/fq_colorWhite"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_game_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_game_title"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/fq_colorBlack"
            android:textSize="10sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_game_close"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="-7dp"
        android:layout_toRightOf="@+id/rl_game_prize_bg"
        android:src="@drawable/fq_ic_close" />
</merge>
