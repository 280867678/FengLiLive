<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="4dp">

    <RelativeLayout
        android:id="@+id/rl_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_seat_num_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:textColor="@color/fq_text_white_color"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/fq_ic_yy_link_like"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/fq_text_white_color"
            android:textSize="8dp" />

        <com.slzhibo.library.ui.view.widget.MicVoiceView
            android:id="@+id/mic_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            app:diffuse_color="#fff"
            app:diffuse_coreRadius="24dp"
            app:diffuse_speed="0.5" />

        <RelativeLayout
            android:id="@+id/rl_avatar_bg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_safa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fq_ic_yy_link_sofa"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_mute_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fq_yy_link_mute_transparent_bg"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_anchor_flag"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/fq_ic_live_msg_anchor_big" />

            <ImageView
                android:id="@+id/iv_mute"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/fq_ic_yy_link_mute"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_lock"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/fq_ic_yy_link_lock"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_seat_num_bg"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:layout_below="@+id/rl_avatar_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fq_ic_yy_link_diamond" />

            <TextView
                android:id="@+id/tv_seat_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:includeFontPadding="false"
                android:text="1"
                android:textColor="@color/fq_text_black"
                android:textSize="8dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
