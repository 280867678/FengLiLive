<?xml version="1.0" encoding="utf-8"?>
<com.slzhibo.library.ui.view.widget.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:rlClipBackground="true"
    app:rlRadius="@dimen/fq_live_item_round_corners">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fq_ic_hj_dynamic_bg" />

    <RelativeLayout
        android:id="@+id/rl_dynamic_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="22dp"
            android:src="@drawable/fq_ic_hj_dynamic_title" />

        <TextView
            android:id="@+id/tv_dynamic_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/fq_ic_hj_dynamic_into"
            android:drawablePadding="3dp"
            android:text="@string/fq_lottery_more"
            android:textColor="@color/fq_text_white_color"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_dynamic_title_bg">

        <TextView
            android:id="@+id/tv_dynamic_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/fq_text_white_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_dynamic_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/fq_hj_attention_dynamic_subscribe_empty_tips"
            android:textColor="@color/fq_text_white_color"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_dynamic_content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dynamic_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="9dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/fq_text_white_color"
            android:textSize="12sp" />
    </RelativeLayout>
</com.slzhibo.library.ui.view.widget.RoundRelativeLayout>
