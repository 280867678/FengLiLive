<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fq_colorWhite"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:paddingBottom="50dp">

    <TextView
        android:id="@+id/tv_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/fq_ic_placeholder_empty_logo"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="@string/fq_text_list_empty"
        android:textColor="@color/fq_text_black_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_text_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/fq_text_list_empty_tips"
        android:textColor="#969696"
        android:textSize="12sp" />
</LinearLayout>
