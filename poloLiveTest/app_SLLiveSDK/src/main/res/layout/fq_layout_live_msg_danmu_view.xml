<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:background="@drawable/fq_shape_danmu_guard_month_text_bg"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="26dp"
        android:paddingTop="7dp"
        android:paddingRight="16dp"
        android:paddingBottom="7dp"
        android:textColor="@color/fq_colorWhite"
        android:textSize="10dp" />

    <FrameLayout
        android:id="@+id/fl_avatar_bg"
        android:layout_width="38dp"
        android:layout_height="38dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/fq_ic_placeholder_avatar" />

        <ImageView
            android:id="@+id/iv_avatar_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fq_ic_guard_month_avatar_bg" />
    </FrameLayout>
</FrameLayout>
